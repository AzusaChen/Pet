@model prjNewPet.Models.tFoundPet

@{
    ViewBag.Title = "FoundDetailForMem";
}
<style>
    body {
        background: url(../images/會員尋獲背景.jpg)no-repeat 0px 0px;
        background-size: cover;
        background-position: 50% 50%;
    }

    fieldset {
        background: #BBBB00;
        width: 40%;
        border-bottom-right-radius: 15px;
        border-top-right-radius: 15px;
    }
</style>
      
    

<body>

    <div>
        <fieldset>
            <h1>請幫牠找到回家的路</h1>
            <div class="image">
                <img src="~/images/@Model.fPetPic" />
            </div>
            <div>
                <ul>
                    <li>
                        寵物品種:@Model.tBreed.fName
                    </li>
                    <li>
                        性別:@Model.fGender
                    </li>
                    <li>
                        毛色:@Model.fSkin
                    </li>
                    <li>
                        尋獲日期:@Model.fFoundTime.ToShortDateString()
                    </li>
                    <li>
                        備註:<p>@Model.fRemark</p>
                    </li>
                </ul>

            </div>
            <div class="backtolist">
                <a href="~/PetMember/PetMemlist" class="btn btn-danger">返回會員中心</a>
            </div>
        </fieldset>
    </div>
</body>