@model prjNewPet.Models.tBreed

@{
    ViewBag.Title = "BreedEdit";
}

<h2>品種編輯</h2>


<form method="post" action="~/PetBreed/BreedEdit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fBreedID)

        <div class="form-group">
            @Html.LabelFor(model => model.fName, "品種名稱", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fPetClassID, "類別", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fPetClassID", (SelectList)ViewBag.SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fPetClassID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("寵物圖片", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <input type="file" name="Image" />
                @Html.ValidationMessageFor(model => model.fPic, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="儲存" class="btn btn-default" />
                </div>
            </div>
        </div>
</form>

    <div>
        @Html.ActionLink("返回", "BreedList")
    </div>

