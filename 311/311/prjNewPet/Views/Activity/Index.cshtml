@model IEnumerable<prjNewPet.Models.tActivity>

@{
    ViewBag.Title = "Index";
}



    <!-- banner -->
    <div class="banner2">
        <div class="about-heading">
            <div class="container">
                <h2>活動總覽</h2>
            </div>
        </div>
    </div>
    <!-- //banner -->
    <!-- gallery -->
    <div class="gallery">
        <div class="container">
            <div class="gallery-grids">


                @foreach (prjNewPet.Models.tActivity act in Model)
                {
                    <div class="col-md-4 gallery-grid">
                        <div class="grid">
                            <figure class="effect-apollo">

                                <a class="example-image-link" href="~/images/@act.fDMPic" data-lightbox="example-set" data-title="@act.fName, @act.fContext">
                                    <img src="~/images/@act.fDMPic" alt="" />
                                    <figcaption >
                                        <p>
                                            <ul>
                                                <li>開始日:@act.fEffectiveDate.ToShortDateString()</li>
                                                <li>截止日:@act.fClosedDate</li>
                                            </ul>
                                        </p>
                                     
                                    </figcaption>
                                </a>
                            </figure>
                        </div>
                    </div>
                }



                <div class="clearfix"> </div>
                <script src="~/oldversion/lightbox-plus-jquery.min.js"></script>
            </div>
        </div>
    </div>
    <!-- //gallery -->
   