@model IEnumerable<prjNewPet.Models.tActivity>

@{
    ViewBag.Title = "ActivityList";
}

@section styles{

<link href="~/Content/tablecss.css" rel="stylesheet" />
   
    }


<div class="container">
    <h2 class="badge badge-info">活動列表</h2>

    <p>
        @Html.ActionLink("建立新活動", "ActivityCreate", null, new { @class = "btn btn-success" })
    </p>
    <table class="table table-striped display" style="font-family:微軟正黑體;font-weight:bold">
        <tr>
            <th>
                活動名稱
            </th>
            <th>
                開始日期
            </th>
            <th>
                內容
            </th>
            <th>
                活動圖片
            </th>
            <th>
                結束日期
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fEffectiveDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fContext)
                </td>
                <td>
                    <img id="ActPic" src="~/images/@item.fDMPic" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fClosedDate)
                </td>
                <td>
                    @Html.ActionLink("修改", "ActivityEdit", new { ActID = item.fActivityID }, new { @class = "btn btn-primary" })

                </td>
                <td>
                    @Html.ActionLink("刪除", "ActivityDelete", new { ActID = item.fActivityID }, new { onclick = "return confirm('確定刪除?')", @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

</div> 