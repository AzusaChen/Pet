
@{
    ViewBag.Title = "CategoryList";
}

@section styles
{
    <link href="~/Theme/redmond/jquery-ui-1.10.3.custom.min.css" rel="stylesheet" />
    <link href="~/Scripts/jtable/themes/lightcolor/blue/jtable.css" rel="stylesheet" />
    
    

}

<h2 style="font-family:微軟正黑體">商品種類一覽表</h2>

<style>
    hr.style-four {
        height: 12px;
        border: 0;
        box-shadow: inset 0 12px 12px -12px rgba(0,0,0,0.5);
    }
</style>
<hr class="style-four" />

<div id="CategoriesJTable"></div>

@section scripts
{
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Scripts/jtable/jquery.jtable.min.js"></script>
    <script src="~/Scripts/jtable/localization/jquery.jtable.zh-TW.js"></script>
    <script>

        $(document).ready(function () {
            $("#CategoriesJTable").jtable({
                title: "產品種類清單",
                paging: true,
                pageSize: 5,
                sorting: true,
                defaultSorting: "fCategoryID ASC",
                actions: {
                    listAction: "@Url.Action("List", "Category")",
                    createAction: "@Url.Action("Create", "Category")",
                    updateAction: "@Url.Action("Edit", "Category")",
                    deleteAction:"@Url.Action("Delete", "Category")",
                },
                fields: {
                    fCategoryID: {
                        key: true,
                        create: false,
                        edit: false,
                        list: true,
                        title: "產品類別編號",
                        width:"20%"
                    },
                    fName: {
                        title: "產品類別名稱",
                        width: "30%"
                    },
                    fDescription: {
                        title: "產品描述",
                        width: "50%"
                    },
                }
            });

            $("#CategoriesJTable").jtable('load');


        });




    </script>
}